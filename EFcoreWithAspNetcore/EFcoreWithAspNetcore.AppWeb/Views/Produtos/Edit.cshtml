@model EFcoreWithAspNetcore.Domain.Produto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
